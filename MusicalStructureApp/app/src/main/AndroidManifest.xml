<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.example.musicalstructureapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HipHopActivity"
            android:label="@string/hiphop_music" />
        <activity
            android:name=".DanceActivity"
            android:label="@string/dance_music" />
        <activity
            android:name=".RomanticActivity"
            android:label="@string/romantic_music" />
        <activity
            android:name=".PlayerActivity"
            android:label="Playing"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>